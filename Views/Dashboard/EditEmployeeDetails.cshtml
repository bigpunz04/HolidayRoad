@model HRV7.Models.Employee

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Edit Employee Details";

}

<h1>@ViewData["Title"]</h1>
<br />
<form asp-action="EditEmployeeDetailsConfirmation" method="post">

    <div asp-validation-summary="All"></div>
    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Employee Id</label>
                <input asp-for="EmployeeId" class="form-control" readonly="readonly" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Employee Id</label>
                <input asp-for="EmployeeId" class="form-control" readonly="readonly" />
            </div>
        </div>
    </div>

    <!--PERSONAL INFORMATION-->
    <div class="row">
        <div class="col-sm-12">
            <h4>Personal Information</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>
    </div>

    <br />

    <!--LOGIN INFORMATION-->
    <div class="row">
        <div class="col-sm-12">
            <h4>Login Information</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email/Login</label>
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
            </div>
        </div>
    </div>

    <br />

    <!--EMPLOYEE INFORMATION-->
    <div class="row">
        <div class="col-sm-12">
            <h4>Employee Information</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <label asp-for="EmploymentType" class="control-label">Employment Type</label>
                <select asp-for="EmploymentType" class="form-control">
                    <option value="">Choose an Employment Type</option>
                    <option value="F">Full Time</option>
                    <option value="P">Part Time</option>
                </select>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label asp-for="DateOfHire" class="control-label">Date of Hire</label>
                <input asp-for="DateOfHire" class="form-control" />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label asp-for="Department" class="control-label">Department</label>
                <input asp-for="Department" class="form-control" />
            </div>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="VacationDays" class="control-label">Number of Vacation Days</label>
                <input asp-for="VacationDays" class="form-control" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="SickDays" class="control-label">Number of Sick Days</label>
                <input asp-for="SickDays" class="form-control" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="BereavementDays" class="control-label">Number of Bereavement Days</label>
                <input asp-for="BereavementDays" class="form-control" />
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <input type="submit" value="Edit Employee" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <a asp-action="Dashboard" asp-controller="Dashboard" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </div>

</form>
